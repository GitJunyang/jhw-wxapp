/* detail.wxss */
.detail{background: #fff}
.detail image{display:block;width:100%}
.detail rich-text{font-size:13px;}
/* 标题  */
.detail_title{display: flex;flex-flow: row;border-top:1px solid #ECECEC;border-bottom:1px solid #ECECEC;padding:4vw}
.detail_title .header{flex:1;width:600rpx;}
.detail_title .name{font-weight: 700;}
.detail_title .price{font-family:-apple-system-font,Helvetica;color:#c91623;font-size:16px;padding:10rpx 0}
.detail_title .share{width:100rpx;text-align: center;font-size: 12px;color: #777}
.detail_title image{width:30px;height: 30px !important;margin:0 auto;}

.wxpay{padding: 30rpx 30rpx;font-size: 12px;height:20px;line-height: 20px;color:#999}
.wxpay image{width:20px;height: 20px !important; padding-right: 20rpx; float:left}
.detail_desc{font-size:13px;width:100%;padding:4vw 4vw 17vw 4vw;box-sizing:border-box;background: #fff}
.btn-cart{
  background: -webkit-linear-gradient(left,#ffcb01, #ff9603);
  background: linear-gradient(to right, #ffcb01, #ff9603);
}
.btn-cart2{
  background: -webkit-linear-gradient(left,#ff7700, #ff4b00);
  background: linear-gradient(to right, #ff7700, #ff4b00);
}
.btn-cart3{
  background: -webkit-linear-gradient(left,#ff8f00, #ff5100);
  background: linear-gradient(to right, #ff8f00, #ff5100);
  color:#fff;
  z-index: 101;
}
/* app.css */
button{
  height: 45px;
  line-height: 45px
}

/* share  */
.shareModal{display:flex;flex-flow:row;height:90px;width:100%;background:#fff;padding:20px 0 45px 0;font-size:14px;overflow:hidden;position:fixed;left:0;bottom:-155px;z-index:99}
.shareModal button{border-right:1px solid #f4f4f4;background:#fff;width:50vw;height:80px;padding:10px 0;margin:0;text-align:center;font-size:14px}
.shareImg{line-height:45px;width:50vw;text-align: center;padding-top:10px;margin-bottom:10px;font-size:14px;}
.closeBg{z-index:101;}
.shareModal image{width:30px;height: 30px !important; display:block;margin:0 auto;}
/* 底部按钮 */
.detail-btn{position:fixed;bottom:0;left:0;z-index: 100;width:100%;background:#fff;height: 45px}
.detail-btn-img{width:150rpx;display:inline-block; text-align: center; float: left;line-height:12vw;box-sizing:border-box;
  border-top: 1px solid #eee;border-right: 1px solid #eee;position: relative;z-index: 999}
.detail-btn-img contact-button{opacity:0;position:absolute;top:0;left:0;z-index: 99}
.detail-btn image{width:60rpx;height: 60rpx;vertical-align: middle;}
.detail-btn button.btn-primary{width:300rpx; display:inline-block;height: 45px;line-height: 45px;border-radius: 0;color:#fff}
/* 产品属性 */
.close{padding-bottom:30px}
.drawer_screen{width:100%;height:100%;position:fixed;top:0;left:0;background:#000;opacity:.2;overflow:hidden;z-index:98;color:#fff}
.drawer_attr_box{width:100%;overflow:hidden;position:fixed;bottom:-400px;left:0;z-index:99;background:#fff}
.drawer_attr_content{max-height:50vh;overflow-y:scroll;font-size:12px;margin-bottom:45px}
.drawer_attr_content .name{padding-right:10px;padding-bottom:8px;font-size:14px;}
.weui-cell-attr text{-webkit-tap-highlight-color:transparent;display:inline-block;border:1px solid #e0e0e0;background-color:#fff;padding:5px 10px;margin:0 10px 10px 0;text-align:center;border-radius:4px;color:#999}
.drawer_attr_content .weui-cell:before{border-top:none}
.drawer_attr_content .weui-cell{padding:10px 5px 0 15px}
/* 加减主容器 */
.stepper{width:92px;height:28px;}
/* 加号和减号 */
.stepper text{width:26px;line-height:26px;text-align:center;float:left;font-size:18px;border:1px solid #e0e0e0;border-radius: 100%}
/* 数值 */
.stepper input{width:30px;height:28px;float:left;margin:0 auto;text-align:center;font-size:14px;padding: 0 3px}
.stepper .normal{color:#141414;border:1px solid #333;}
.stepper .disabled{color:#cfcfcf}

/** 回到顶部 **/
.top{position: fixed;bottom: 11vh;right: 4vw; width: 30px;height: 30px;padding: 1vw}
