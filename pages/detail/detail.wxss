/* detail.wxss */
.detail{background: #fff}
.detail image{display:block;width:100%}
.detail_title{border-top:1px solid #ECECEC;border-bottom:1px solid #ECECEC;padding:4vw}
.detail_title .name{font-weight: 700;}
.price{font-family:-apple-system-font,Helvetica;color:#ef4e5e;font-size:16px;padding:10rpx 0}
.detail_bd{width:100%;padding:4vw 4vw 17vw 4vw;box-sizing:border-box;background: #fff}
rich-text{font-size:13px;}
.wxpay{padding: 30rpx 30rpx;font-size: 12px;height:20px;line-height: 20px;color:#999}
.wxpay image{width:20px;height: 20px !important; padding-right: 20rpx; float:left}
.btn-cart{
  background: -webkit-linear-gradient(left,#ffcb01, #ff9603);
  background: linear-gradient(to right, #ffcb01, #ff9603);
}
.btn-cart2{
  background: -webkit-linear-gradient(left,#ff7700, #ff4b00);
  background: linear-gradient(to right, #ff7700, #ff4b00);
}
.btn-cart3{
  background: -webkit-linear-gradient(left,#ff8f00, #ff5100);
  background: linear-gradient(to right, #ff8f00, #ff5100);
  color:#fff;
}
/* 自定义轮播小圆点 */
.swiper-container{position:relative}
.swiper-container .dots{position:absolute;left:0;right:0;bottom:20rpx;display:flex;justify-content:center}
.swiper-container .dots .dot{margin:0 8rpx;width:16rpx;height:16rpx;background:0 0;border:4rpx solid #8e9c9c;border-radius:100%;transition:all .6s}
.swiper-container .dots .dot.active{background:#fff;border:4rpx solid #fff}
/* 底部按钮 */
.detail-btn{position:fixed;bottom:0;left:0;width:100%;height:13vw;line-height:13vw;background:#fff;}
.detail-btn-img{width:125rpx;display:inline-block; text-align: center; float: left;line-height:7.5vw;box-sizing:border-box;
  border-top: 1px solid #eee;border-right: 1px solid #eee;position: relative;z-index: 999}
.detail-btn-img contact-button{opacity:0;position:absolute;top:0;left:0;z-index: 99}
.detail-btn image{width:20px;height: 20px;vertical-align: middle;}
.detail-btn .count{color: #fff;background: red;position: absolute;border-radius: 100%;min-width:5vw;vertical-align: middle;
height: 5vw;line-height: 5vw;margin-top: 0.5vw;margin-left: -10rpx;font-size: 10px}
.detail-btn .text{display:block;font-size:10px;color:#999;line-height:6vw;}
.detail-btn button.btn-primary{width:250rpx; display:inline-block;height: 13vw;line-height: 13vw;border-radius: 0;color:#fff}
/* 产品属性 */
.close{padding-bottom:30px}
.drawer_screen{width:100%;height:100%;position:fixed;top:0;left:0;background:#000;opacity:.2;overflow:hidden;z-index:1000;color:#fff}
.drawer_attr_box{width:100%;overflow:hidden;position:fixed;bottom:0;left:0;z-index:2000;background:#fff}
.drawer_attr_content{max-height:50vh;overflow-y:scroll;font-size:12px;margin-bottom:13vw}
.drawer_attr_content .name{padding-right:10px;padding-bottom:8px;font-size:14px;}
.weui-cell-attr text{-webkit-tap-highlight-color:transparent;display:inline-block;border:1px solid #e0e0e0;background-color:#fff;padding:5px 10px;margin:0 10px 10px 0;text-align:center;border-radius:4px;color:#999}
.drawer_attr_content .weui-cell:before{border-top:none}
.drawer_attr_content .weui-cell{padding:10px 5px 0 15px}
/* 加减主容器 */
.stepper{width:92px;height:28px;}
/* 加号和减号 */
.stepper text{width:26px;line-height:26px;text-align:center;float:left;font-size:18px;border:1px solid #e0e0e0;border-radius: 100%}
/* 数值 */
.stepper input{width:30px;height:28px;float:left;margin:0 auto;text-align:center;font-size:14px;padding: 0 3px}
.stepper .normal{color:#141414;border:1px solid #333;}
.stepper .disabled{color:#cfcfcf}
