/* 搜索 */
.search{background:#ff6214;padding:7px 0 7px 20rpx;overflow:hidden}
.search .search-btn{background:#fff;color:#999;font-size:12px;text-align:center;height:26px;
  line-height:26px;border-radius:13px;width:710rpx;}
.search .search-btn:active{background:#fff5f0}
.search image{width:18px;height:18px;vertical-align:middle}
.search .category{padding:4px 15px;float:right}


page {
  background: #f0f0f0;
}
.search-box {
  font-size: 12px;
  padding: 10px;
  background: #fff;
}

.search-box input {
  border: 1px solid rgba(0, 0, 0, .1);
  padding: 3px 8px;
  border-radius: 4px;
}

.products-bd {
  margin-top: 10px;
  padding: 0 10px;
  display: flex;
}

.products-bd-item {
  width: 50%;
  box-sizing: border-box;
}

.products-bd-item:nth-child(odd) {
  border-right: 5px solid #f0f0f0;
}

.products-bd-item:nth-child(even) {
  border-left: 5px solid #f0f0f0;
}

.products-bd-item-image image {
  width: 100%;
  display: block;
}

.products-bd-item-desc {
  background: #fff;
  font-size: 14px;
  padding: 10px;
}

.products-title {
  line-height: 20px;
}

.products-type {
  font-size: 12px;
  color: #999;
  line-height: 20px;
  height: 20px;
  overflow: hidden
}

.products-price {
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.products-price text {
  color: #cc0000;
  font-size: 16px;
}

.products-btn {
  width: 40px;
  height: 40px;
  background: url('http://img.jihui88.com/upload/z/z1/zaingdev/picture/2017/08/30/ef1fdb18-185f-427d-8d69-9cc5ee230e81.png') center no-repeat;
  background-size: contain;
  padding: 5px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #1f2f5e;
  font-size: 12px;
}