/*容器总体布局为左右两列*/
page{

	background-color: #f4f4f4;
}
.container {
	display: flex;
	flex-direction: row;
}

/*侧边栏顶级分类给予固定宽度*/
.sidebar {
	width: 200rpx;
	overflow-y: scroll;
}
.sidebar .item {
	border-bottom: 1px solid #e5e5e5;
	border-right: 1px solid #e5e5e5;
	line-height: 1.8;
	text-align: center;
	color: #000;
	font-size: 14px;
	background: #f4f4f4;
	box-sizing: border-box;padding:39rpx 0;

}
.sidebar .border{
	position: relative;font-size:12px;
}
.sidebar .borderLft{
	position: absolute;
	left: 0;
	height: 90%
}
.sidebar image{
	width: 40rpx;height: 40rpx;
}



.main {
	width: 100%;
	display: flex;
	flex-direction: column;
	background: #fff;
}

/*网格布局子类九宫格分布*/
.gridview {
	height: 100%;margin-left:22rpx;

}
.title{
	position: relative;
	height: 40px;
	line-height: 40px;
	text-align: center;
	margin: 10px 0;
}
.title:before{
	content: "";
	position: absolute;bottom:20px;
	width: 50rpx;
	height: 1px;
	background: #cecece;margin-left:-70rpx;
}
.title:after{
	content: "";
	position: absolute;bottom:20px;
	width: 50rpx;
	height: 1px;
	background: #cecece;margin-left:20rpx;
}
/*向左流动*/
.gridview dl {
	float: left;
	margin: 15rpx;
}

/*图片*/
.gridview dt image {
	width: 150rpx;
	height: 150rpx;
	padding: 0 4rpx
}

/*文字*/
.gridview dd text {
	color: #666;
	font-size: 12px;
	text-align: center;
	display: block;
	line-height: 20px;
}
