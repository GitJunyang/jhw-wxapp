<!-- 搜索 -->
<view class="search">
  <view class="search-btn" bindtap="page" data-url="../search/search">
    <image src="../../images/search.png"></image>
    输入关键词搜索
  </view>
</view>
<!-- 轮播 -->
<swiper class="swiper_box" indicator-dots="{{indicatorDots}}" style="height:{{swiperHeight}}px"
  indicator-color="#fff" indicator-active-color="#d00909" autoplay="{{autoplay}}" duration="1200">
    <block wx:for="{{images}}">
        <swiper-item>
            <image mode="widthFix" src="http://img.jihui88.com/{{item.serverPath}}" class="slide-image" bindload="imageLoad"/>
        </swiper-item>
    </block>
</swiper>
<!-- 资讯 -->
<view class="weui-cells weui-cells-news">
  <navigator class="weui-cell" url="../news/newsDetail?id={{news.news_id}}&title={{news.title}}">
    <view class="weui-cell__hd"><view class="news_tip">最新资讯：</view></view>
    <view class="weui-cell__bd"><navigator class="news_title" url="../my">{{news.title}}</navigator></view>
    <view class="weui-cell__ft"><view class="news_time">{{news.add_time}}</view></view>
  </navigator>
</view>
<!-- 分类 -->
<view class="cate">
  <navigator class="cate_item" url="../product/product?category_id={{item.category_id}}&title={{item.name}}" wx:for="{{category}}" wx:key="category_id">
    <view class="item_grow item_pic">
      <image mode="widthFix" src="{{item.image}}"></image>
    </view>
    <view class="item_grow cate_name">{{item.name}}</view>
  </navigator>
</view>
<view class="index-br"></view>
