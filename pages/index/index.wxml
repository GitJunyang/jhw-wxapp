<!-- 搜索 -->
<view class="search-box">
  <input type="text" value="{{keyword}}" bindinput="wxSearchInput" bindconfirm="searchKey" confirm-type="search" placeholder="搜索商品" />
  <image mode="widthFix" class="search-icon" src="../../images/search.png" bindtap="searchKey"></image>
</view>
<!-- 轮播 -->
<swiper class="swiper_box" style="{{swiperHeight}}" indicator-active-color="rgba(255, 255, 255, 1)" indicator-color="rgba(255, 255, 255, .5)"
  indicator-dots="{{swiperTrue}}" autoplay="{{swiperTrue}}" circular="{{swiperTrue}}" interval="3000" duration="500">
    <block wx:for="{{images}}" wx:key="item.attId">
        <swiper-item>
            <image mode="widthFix" src="http://img.jihui88.com/{{item.serverPath}}" bindload="imageLoad"/>
        </swiper-item>
    </block>
</swiper>
<!-- 产品分类 -->
<view class="category">
  <navigator url="../product/product?category_id={{item.category_id}}&title={{item.name}}" class="category-item" wx:for="{{category}}" wx:key="category_id">
    <view class="category-item-icon"><image src="{{item.image}}"></image></view>
    <view class="category-item-text">{{item.name}}</view>
  </navigator>
</view>
<!-- 热销商品 -->
<view class="products">
  <view class="products-hd">
    <view class="products-hd-wrap" style="{{primaryColor && 'border-left:5px solid ' + primaryColor}};">
      <view class="products-hd-item" style="color:{{primaryColor}};">热销商品</view>
    </view>
  </view>
  <image mode="widthFix" class="hotBanner" src="http://img.jihui88.com/upload/q/q2/qixingxcx/picture/2017/11/08/3ce92717-7951-43e8-942a-56701a330d52.jpg"/>
  <view class="products-bd">
    <navigator class="products-bd-item" wx:for="{{hotlist}}" wx:key="product_id" url="../detail/detail?id={{item.product_id}}&title={{item.name}}">
      <view class="products-bd-item-image">
        <image mode="widthFix" src="{{item.pic_path}}"></image>
      </view>
      <view class="products-bd-item-desc">
        <view class="products-title">{{item.name}}</view>
        <view class="products-type">{{item.model || ''}}</view>
        <view class="products-price">
          <text><text class="unit">￥</text>{{item.price}}</text>
          <view class="products-btn" style="color:{{primaryColor}}">立即抢购</view>
        </view>
      </view>
    </navigator>
  </view>
</view>
<!-- 产品分类列表 -->
<view class="products">
  <view class="products-hd">
    <view class="products-hd-wrap products-hd-cate" style="{{primaryColor && 'border-left:5px solid ' + primaryColor}};">
      <view class="products-hd-item" style="{{active === index ? 'color:' + primaryColor : ''}}" wx:for="{{category}}" wx:key="category_id" bindtap="switchTab" data-tab="{{index}}">{{item.name}}</view>
    </view>
  </view>
  <image mode="widthFix" class="hotBanner" src="http://img.jihui88.com/upload/q/q2/qixingxcx/picture/2017/11/08/4007a76c-2f75-4011-9357-9cef13b35acb.jpg" style="padding:3vw 2vw 0 2vw;width:96vw"/>
  <view class="products-bd">
    <navigator class="products-bd-item" wx:for="{{list}}" wx:key="product_id" url="../detail/detail?id={{item.product_id}}&title={{item.name}}">
      <view class="products-bd-item-image">
        <image mode="widthFix" src="{{item.pic_path}}"></image>
      </view>
      <view class="products-bd-item-desc">
        <view class="products-title">{{item.name}}</view>
        <view class="products-type">{{item.model || ''}}</view>
        <view class="products-price">
          <text><text class="unit">￥</text>{{item.price}}</text>
          <view class="products-btn" style="color:{{primaryColor}}">立即抢购</view>
        </view>
      </view>
    </navigator>
  </view>
</view>
<!-- 更多 -->
<view class="footer">
  <navigator class="more" url="../product/product">查看所有商品</navigator>
</view>
