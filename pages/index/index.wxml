<!-- 搜索 -->
<view class="searchFixed">
  <view class="search" style="background:{{primaryColor}}">
    <view class="search-btn" style="background: #fff;" bindtap="page" data-url="../search/search">
      <view style="background: {{lighterPrimaryColor}};width:100%;height:100%">
        <image src="../../images/searchWhite.png"></image>
        <text>搜索商品</text>
      </view>
    </view>
  </view>
</view>
<!-- 轮播 -->
<swiper class="swiper_box" style="{{swiperHeight}}"
  indicator-dots="{{swiperTrue}}" indicator-color="rgba(0, 0, 0, .3)" indicator-active-color="{{primaryColor}}"
  autoplay="{{swiperTrue}}" circular="{{swiperTrue}}" interval="3000" duration="500">
  <block wx:for="{{images}}" wx:key="item.attId" wx:for-index="index">
    <swiper-item>
      <image mode="widthFix" src="http://img.jihui88.com/{{item.serverPath}}" bindload="imageLoad"/>
    </swiper-item>
  </block>
</swiper>
<!-- nav -->
<view class="nav">
  <view class="item" bindtap="page" data-url="../category/category">
    <image src="../../images/index/cate.png"></image>
    <view>商品分类</view>
  </view>
  <view class="item">
    <image src="../../images/index/coupon.png"></image>
    <view>优惠券</view>
  </view>
  <view class="item">
    <image src="../../images/index/hot.png"></image>
    <view>热门推荐</view>
  </view>
  <view class="item">
    <image src="../../images/index/active.png"></image>
    <view>最新活动</view>
  </view>
</view>
<!-- 产品展示 hot -->
<view class="weui-cells">
  <view class="weui-cell">
    <view class="weui-cell__bd">热门推荐</view>
    <view class="weui-cell__ft">查看更多 >></view>
  </view>
</view>
<view class="goods">
  <navigator class="item" url="../detail/detail?id={{item.product_id}}&title={{item.name}}" wx:for="{{hostList}}" wx:key="item.product_id">
    <view class="item_grow item_pic">
      <image mode="widthFix" src="{{item.pic_path}}"></image>
    </view>
    <view class="item_grow item_content">
      <view class="pro_title">{{item.name}}</view>
      <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
    </view>
  </navigator>
</view>
<!-- 产品展示 分类 -->
<view wx:for="{{list}}">
  <view class="weui-cells">
    <view class="weui-cell" bindtap="page" data-url="../product/product?category_id={{categoryList[index].category_id}}&title={{categoryList[index].name}}">
      <view class="weui-cell__bd">{{categoryList[index].name}}</view>
      <view class="weui-cell__ft">查看更多 >></view>
    </view>
  </view>
  <view class="goods">
    <navigator class="item" url="../detail/detail?id={{item.product_id}}&title={{item.name}}" wx:for="{{item}}" wx:for-item="item1" wx:key="item1.product_id">
      <view class="item_grow item_pic">
        <image mode="widthFix" src="{{item1.pic_path}}"></image>
      </view>
      <view class="item_grow item_content">
        <view class="pro_title">{{item1.name}}</view>
        <view class="pro_price"><text class="unit">￥</text>{{item1.price}}</view>
      </view>
    </navigator>
  </view>
</view>


<view wx:if="{{isloading}}" class="tip"><image class="loading" src="../../images/loading.png"></image></view>

<image class="top" src="../../images/top.png" wx:if="{{scrollTop}}" catchtap="goTopFun"></image>
