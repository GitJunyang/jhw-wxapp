    <view class="weui-cell__ft">JINLIDA·GRINDING WHEEL</view>
  </view>
</view>
<view class="goods">
  <navigator class="item" url="../detail/detail?id={{item.product_id}}&title={{item.name}}" wx:for="{{list1}}" wx:key="product_id">
    <view class="item_grow item_pic">
      <image mode="widthFix" src="{{item.pic_path}}"></image>
    </view>
    <view class="item_grow item_content">
      <view class="pro_title">{{item.name}}</view>
      <view class="pro_model">{{item.model}}</view>
      <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
    </view>
