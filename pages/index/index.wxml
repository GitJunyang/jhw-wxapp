<!-- 搜索 -->
<view class="search">
  <view class="search-btn" bindtap="page" data-url="../search/search">
    <image src="../../images/search.png"></image>
    搜索商品
  </view>
</view>
<!-- 轮播 -->
<view class="swiper-container">
  <swiper class="swiper_box" current="{{swiperCurrent}}" bindchange="swiperChange" indicator-dots="{{indicatorDots}}" style="height:{{swiperHeight}}px"
     autoplay="{{autoplay}}" duration="1200">
      <block wx:for="{{images}}">
          <swiper-item>
              <image mode="widthFix" src="http://img.jihui88.com/{{item.serverPath}}" class="slide-image" bindload="imageLoad"/>
          </swiper-item>
      </block>
  </swiper>
  <view class="dots" wx:if="{{images.length > 1}}">
    <block wx:for="{{images}}" wx:key="item.attId">
      <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
    </block>
  </view>
</view>
<!-- 切换 -->
<view class="weui-navbar">
  <view class="weui-navbar__item {{nav == '1' ? 'on' : ''}}" bindtap="nav" data-nav="1">
    商品
  </view>
  <view class="weui-navbar__item {{nav == '2' ? 'on' : ''}}" bindtap="nav" data-nav="2">
    分类
  </view>
</view>
<!-- 产品展示 -->
<view hidden="{{nav != '1'}}" bindtouchend="scrollTopFn">
  <view class="goods">
    <navigator class="item" url="../detail/detail?id={{item.product_id}}&title={{item.name}}" wx:for="{{list}}" wx:key="product_id">
      <view class="item_grow item_pic">
        <image mode="widthFix" src="{{item.pic_path}}"></image>
      </view>
      <view class="item_grow item_content">
        <view class="pro_title">{{item.name}}</view>
        <view class="pro_price"><text class="unit">￥</text>{{item.price}}</view>
      </view>
    </navigator>
  </view>
  <view wx:if="{{isloading}}" class="tip"><image class="loading" src="../../images/loading.png"></image></view>
</view>
<!-- 分类 -->
<view class="category" hidden="{{nav != '2'}}" bindtouchend="scrollTopFn">
  <view class="item" wx:for="{{categoryList}}" wx:key="item.category_id">
    <navigator url="../product/product?category_id={{item.category_id}}&title={{item.name}}">
      <image mode="widthFix" src="{{item.image}}"></image>
      <view class="cate_name">
        <view class="cate_bg"></view>
        <text>{{item.name}}</text>
      </view>
    </navigator>

    <view class="item" wx:for="{{item.child}}" wx:for-item="item1">
      <navigator url="../product/product?category_id={{item1.category_id}}&title={{item1.name}}">
        <image mode="widthFix" src="{{item1.image}}"></image>
        <view class="cate_name">
          <view class="cate_bg"></view>
          <text>{{item1.name}}</text>
        </view>
      </navigator>

      <navigator url="../product/product?category_id={{item2.category_id}}&title={{item2.name}}" wx:for="{{item1.child}}" wx:for-item="item2">
        <image mode="widthFix" src="{{item2.image}}"></image>
        <view class="cate_name">
          <view class="cate_bg"></view>
          <text>{{item2.name}}</text>
        </view>
      </navigator>
    </view>
  </view>
</view>
<image class="top" src="../../images/top.png" wx:if="{{scrollTop}}" catchtap="goTopFun"></image>
